<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/rl_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_ffffff">

            <ImageView
                android:id="@+id/iv_large"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:scaleType="centerInside"
                android:src="@null"
                android:background="#f0f1f7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_round"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@null"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="#212121"
                    android:textSize="20sp"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:scrollbarDefaultDelayBeforeFade="500"
                android:scrollbars="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:orientation="vertical"
                    android:background="#f0f1f7"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:minHeight="100dp"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:textIsSelectable="true"/>

                    <TextView
                        android:id="@+id/tv_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:textIsSelectable="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#212121"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_video"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:includeFontPadding="false"/>
                            <TextView
                                android:id="@+id/tv_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text=""
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:includeFontPadding="false"/>
                            <TextView
                                android:id="@+id/tv_subscriber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:text=""
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:includeFontPadding="false"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_channel"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ripple_circle_trans_grey"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_channel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/btn_title_option_nor" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_bookmark"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ripple_circle_trans_grey"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/rl_channel"
                            android:layout_marginRight="2dp"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_bookmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                android:src="@android:drawable/btn_star_big_off" />

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>